@page
@model Sphinx_Commercial_Task.Web.Pages.Products.DeleteModel

<form method="post">
	<input hidden asp-for="Product.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Product</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Product.Name"></label>
			<input asp-for="Product.Name" disabled class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="Product.Description"></label>
			<input asp-for="Product.Description" disabled class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="Product.IsActive"></label>
			<select asp-for="Product.IsActive" disabled class="form-control" asp-items="Model.IsActiveItems"></select>
			<span asp-validation-for="Product.IsActive" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
		<a asp-page="ListAllProducts" class="btn btn-secondary" style="width:150px;"> Back to List</a>
	</div>

</form>

