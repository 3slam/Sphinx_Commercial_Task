@page
@model Sphinx_Commercial_Task.Web.Pages.Products.EditModel


<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Edit Product</h2>
			<hr />
		</div>

		<input asp-for="ProductId" hidden class="form-control" />
		 



		<div class="mb-3">
			<label asp-for="Product.Name"></label>
			<input asp-for="Product.Name" class="form-control" />
			<span asp-validation-for="Product.Name" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Product.Description"></label>
			<input asp-for="Product.Description" class="form-control" ></input>
			<span asp-validation-for="Product.Description" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Product.IsActive"></label>
			<select asp-for="Product.IsActive" class="form-control" asp-items="Model.IsActiveItems"></select>
			<span asp-validation-for="Product.IsActive" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px;">Edit</button>
		<a asp-page="ListAllProducts" class="btn btn-secondary" style="width:150px;"> Back to List</a>

	</div>

</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

